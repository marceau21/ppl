<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2 class='mb-3 mt-3'>S'INSCRIRE</h2>
         <div class="m-1">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        </div>
         <div class="form-inputs">
          <%= f.error_notification %>
        <div class="form-inputs">
            <%= f.input :photo, as: :file %>
          <div class="row">
            <div class="col">
              <%= f.input :first_name,
                          required: true,
                          label: 'Prénom'%>
            </div>
            <div class="col">
              <%= f.input :last_name,
                          required: true,
                          label: 'Nom'%>
            </div>

          </div>
            <%= f.input :social_security_number,
                        required: true,
                        # hint: ("#{15} characters" if @password_length),
                        label: 'Numéro de Sécurité Sociale',
                        hint: ("#{15} chiffres" if @minimum_password_length)
                        %>
                        <!-- REGEX pour le N° de SECU -->
                        <!-- ^(?<gender>[12])\s(?<year>\d{2})\s(?<month>(0[1-9]|1[0-2]))\s(?<zipcode>(0[1-9]|[1-9]\d))\s(?<rand1>\d{3})\s(?<rand2>\d{3})\s(?<checksum>\d{2})$ -->

            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        label: 'Email'%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{6} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: 'Mot de passe'
                         %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: 'Confirmer le mot de passe'
                         %>

        <div class="form-action" >
          <%= f.button :submit, "Je m'inscris", class:"btn btn-success mb-3" %>
        </div>

        </div>


      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


