<div>
  <div class="topbar d-flex justify-content-between align-items-center">
    <div class="text-left"><%= image_tag "logo.png", alt: "alttext", style:"height:60px; margin-left:20px;" %></div>
    <div class="signup text-right p-2">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Je m'inscris", new_registration_path(resource_name), class:"btn btn-secondary btn-sm ml-2"  %><br />
          <% end %>
        </div>
  </div>

<div class="home-video-wrapper rounded">
  <%= video_tag "banner1.mp4", controls:true, autoplay: true, loop: :loop, muted: :muted, poster:'poster_photo.png', class:'home_video' %>
  <div class="d-flex justify-content-end w-100" style="height: 90vh; width: 100vw; margin-top: 0px; margin-right:460px;">


    <div class="form text-center form-homepage pt-3" >
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <i class="fas fa-cloud pb-3" style="color: #F9D132;"></i>
        <h3 class="text-primary" style="font-size:24px;font-weight: normal;">Avis aux Administrophobes</h3>
        <p style="font-size: 16px;">Venez simplifier le suivi de votre vie professionnelle</p>
          <div class="form-inputs text-left">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        class:"pb-3" %>
            <div class="mt-3"><%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        label: "Mot de passe" %>
            </div>
          </div>

          <div class="form-actions mt-3">
            <div class="jemeconnecte"><%= f.button :submit, "Je me connecte", class:"btn btn-primary mr-1 w-100 text-white"%></div>
            <div class="">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: 'text-dark', style: 'font-size: 12px;' %>
              <% end %></div>
          </div>
        <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
  <div id="mouse-container">
    <a href="#footer">
      <div id="mouse-scroll">
        <div class="mouse">
          <div class="mouse-in"></div>
        </div>
        <div>
            <span class="down-arrow-1"></span>
            <span class="down-arrow-2"></span>
            <span class="down-arrow-3"></span>
         </div>
      </div>
    </a>
  </div>
</div>



<div class="container">

</div >
  <h3 class="text-center text-primary p-4 mb-4 pb-5">C'est tellement simple d'être connecté en toute confiance</h3>
</div>
</div>

<div class="d-flex justify-content-around w-100">
  <div class="row pb-5">
    <div class="col-sm">
      <div style="width: 18rem;" >
          <%= image_tag "hackermind.svg", class:"card-img-top ", style:"height:150px;" %>
          <div>
            <h4 class="text-center text-secondary mt-4">Stockage Sécurisé</h4>
            <p class="text-center">de mes données professionnelles</p>
          </div>
          </div>
    </div>

    <div class="col-sm">
            <div style="width: 18rem;">
          <%= image_tag "progress_data.svg", class:"card-img-top", style:"height:150px;", crop: :fill %>
          <div>
          <h4 class="text-center text-secondary mt-4">Tableau de Bord</h4>
          <p class="text-center">graphiques personnalisés</p>
          </div>
      </div>
    </div>

    <div class="col-sm">
            <div style="width: 18rem;">
          <%= image_tag "moment_to_relax.svg", class:"card-img-top", style:"height:150px;", crop: :fill %>
          <div>
          <h4 class="text-center text-secondary mt-4">Simulations</h4>
          <p class="text-center">retraite, impôts, formation</p>
          </div>
      </div>
    </div>

  </div>



</div>


