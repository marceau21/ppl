<div class="fixed-top m-2 d-flex justify-content-between">
  <div>
    <%= image_tag "billy.png", alt: "alttext", width: "70" %>
  </div>

  <div>
    <% if user_signed_in? %>
        <% if current_user.photo.attachment.nil? %>
          <%= image_tag "avatar_manquant.png", class: "avatar-square dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-square dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <p><%= link_to "Gérer votre profil", "#", class: "dropdown-item" %></p>
          <p><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %></p>
        </div>
    <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    <% end %>
  </div>


</div>
