<div class="fixed-top m-2 d-flex justify-content-between">
  <div>
    <%= image_tag "billy.png", alt: "alttext", width: "70" %>
  </div>

  <div>
    <% if user_signed_in? %>
        <%= image_tag "thevenoud", class: "avatar-square dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <p><%= link_to "Gérer votre profil", "#", class: "dropdown-item" %></p>
          <p><%= link_to "Se déconnecter", destroy_user_session_path, class: "dropdown-item", method: :delete %></p>
        </div>
    <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    <% end %>
  </div>


</div>
